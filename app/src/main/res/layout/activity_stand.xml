<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sub_bg"
    tools:context=".Stand_Activity">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:text="back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="405dp"
        android:layout_height="60dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="90dp"
        android:gravity="left|fill_vertical"
        android:paddingLeft="20dp"
        android:text="1st Standard"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvStand"
        android:layout_width="400dp"
        android:layout_height="55dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_bg"
        android:paddingLeft="4dp"
        android:paddingTop="7dp"
        android:text="Select Standard :"
        android:textColor="#D17D01"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="405dp"
        android:layout_height="60dp"
        android:layout_marginStart="2dp"
        android:gravity="left|fill_vertical"
        android:paddingLeft="20dp"
        android:text="2nd Standard"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_1" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="405dp"
        android:layout_height="60dp"
        android:layout_marginStart="2dp"
        android:gravity="left|fill_vertical"
        android:paddingLeft="20dp"
        android:text="3rd Standard"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_2" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="405dp"
        android:layout_height="60dp"
        android:layout_marginStart="2dp"
        android:gravity="left|fill_vertical"
        android:paddingLeft="20dp"
        android:text="4th Standard"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_3" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="405dp"
        android:layout_height="60dp"
        android:layout_marginStart="2dp"
        android:gravity="left|fill_vertical"
        android:paddingLeft="20dp"
        android:text="5th Standard"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_4" />

</androidx.constraintlayout.widget.ConstraintLayout>